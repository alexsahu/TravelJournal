<%= semantic_form_for @place do |f| %>
  <%= f.inputs do %>
 	<%= f.input :name %>
	<%= f.input :city %>
	<%= f.input :nation %>
	<%= f.semantic_fields_for :reviews do |rf| %>
		<%= rf.input :description , :as => :text , :input_html => {:rows => 10, :cols => 10} %>
	<% end %>
 <% end %>
 <%= f.buttons do %>
   <%= f.commit_button %>
 <% end %>
<% end %>
